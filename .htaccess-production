Options -MultiViews
RewriteEngine On

# Détection automatique : commentez/décommentez selon votre config Hostinger
# Si Document Root = /public/ alors utilisez RewriteBase /
# Si Document Root = racine alors utilisez RewriteBase /public/

RewriteBase /

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
